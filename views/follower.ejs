<!-- right side and main content -->
<div class=" flex">

    <!--side bar link-->
    <div class="w-[20vw] h-full fixed z-50 mt-6 "> <%- include("./partials/sidebar") %></div>

    <div
        class="flex flex-col w-[79vw] h-[92vh]  border-opacity-0  shadow-[1px_0_1px_0_rgba(0,0,0,0.2)] ml-[20vw] box-border s ">
        <!-- heading followers -->
        <div class="flex gap-6 items-center ml-8 mt-9">
            <h1 class="text-xl font-bold">Followers</h1>


            <p onclick="openFollow(this, 'followers')" class="follow-tab opacity-60 text-sm cursor-pointer">Followers
            </p>
            <p onclick="openFollow(this, 'followings')" class="follow-tab opacity-60 text-sm cursor-pointer">Following
            </p>


        </div>
        <!-- search -->
        <div>
            <input class="border border-zinc-300 border-opacity-0 p-2 rounded-md mt-6 ml-8 w-[40vw]" type="text"
                placeholder="Search followers...">
        </div>
        <!-- followers -->
        <div id="followers" class="follow">
            <%followers.forEach((follower)=>{%>
                <div
                    class=" mt-5 ml-8 border border-zinc-300 border-opacity-0  rounded-md p-3 w-[75vw] flex justify-between items-center">
                    <div class=" flex items-center gap-4">
                        <div class="w-[40px] h-[40px] overflow-hidden rounded-full ml-4 border">
                            <!-- logo -->
                            <a href=""><img
                                    src="data:image/jpeg;base64,<%=follower.follower.profilePic?.toString('base64')%>"
                                    class="overflow-hidden  object-cover w-[100%] h-[100%] object-top" alt="Bob"></a>
                        </div>
                        <div class="flex flex-col items-start">
                            <!-- username -->
                            <p class="font-bold opacity-80 text-md">
                                <%=follower?.follower?.userName%>
                            </p>
                            <p class="opacity-60 text-sm"></p>
                        </div>
                    </div>
                    <div>
                        <!-- buttons -->
                        <button class="bg-amber-600 border-black px-6 py-[5px] rounded-md text-white">Follow</button>
                    </div>
                </div>

                <% })%>

        </div>
        <div id="followings" class="follow hidden">
            <%following.forEach((follower)=>{%>
                <div
                    class=" mt-5 ml-8 border border-zinc-300 border-opacity-0  rounded-md p-3 w-[75vw] flex justify-between items-center">
                    <div class=" flex items-center gap-4">
                        <div class="w-[40px] h-[40px] overflow-hidden rounded-full ml-4 border">
                            <!-- logo -->
                            <a href=""><img
                                    src="data:image/jpeg;base64,<%=follower.following.profilePic?.toString('base64')%>"
                                    class="overflow-hidden  object-cover w-[100%] h-[100%] object-top" alt="Bob"></a>
                        </div>
                        <div class="flex flex-col items-start">
                            <!-- username -->
                            <p class="font-bold opacity-80 text-md">
                                <%=follower?.following?.fullName%>
                            </p>
                            <p class="opacity-60 text-sm">@<%=follower?.following?.userName%>
                            </p>
                        </div>
                    </div>
                    <div>
                        <!-- buttons -->
                        <% if (follower.isFollowed) { %>
                            <button class="bg-gray-400 border-black px-6 py-[5px] rounded-md text-white"
                                disabled>Following</button>
                            <% } else { %>
                                <button onclick="followUser('<%=follower?.following?._id%>')"
                                    class="bg-amber-600 border-black px-6 py-[5px] rounded-md text-white">Follow</button>
                                <% } %>

                    </div>
                </div>

                <% })%>

        </div>





    </div>

</div>