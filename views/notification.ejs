<!--main div-->
<div class="w-full fixed h-[8vh] z-999 bg-pink-800 top-0 left-0"><%- include("./partials/headerOptions") %></div>
<div class="flex">
    <!--side bar link-->
    <div class="w-[20vw] h-full fixed z-50 mt-6 "> <%- include("./partials/sidebar") %></div>
    <!-- notification content -->
    <div class=" ml-[19vw] mt-10 flex flex-col space-y-4 box-border"> <!--main div for content-->
        <div>
            <h1 class="text-2xl font-semibold"></h1>
        </div>

        <div>
            <div class="flex items-center space-x-1">
                <h1 class="font-semibold mb-4 text-[18px]">Notifications</h1>

            </div>
            <% notifications.reverse().forEach(notification=> { %>
                <div class=" flex justify-between items-center w-[60vw] border-b-1 border-t-1 border-zinc-300">
                    <!--for icon and profile-->
                    <div class="flex space-x-4">

                        <div class="w-[3vw] h-[3vw] shadow-2xl  "><!-- for profile-->
                            <a class="shadow-2xl" href=""><img
                                    class=" h-[100%] w-[100%] overflow-hidden rounded-full border  object-cover object-center shadow-2xl"
                                    src="data:image/jpg;base64,<%= notification?.userId2?.profilePic?.toString('base64')%>"
                                    alt="<%= notification?.userId2?.userName %>"></a>
                        </div>
                        <div> <!--message + likes-->
                            <div class="flex items-center space-x-1">
                                <p class="text-sm font-semibold">
                                    <%= notification?.userId2?.userName %>
                                </p>
                                <%if(notification?.action?.toString()==='like'){%>
                                    <p class="text-sm">liked your post</p>
                                    <%}%>
                                        <%if(notification?.action?.toString()==='comment'){%>
                                            <p class="text-sm">commented on your post</p>
                                            <%}%>
                                                <%if(notification?.action?.toString()==='follow'){%>
                                                    <p class="text-sm">started following you</p>
                                                    <%}%>
                                                        <%if(notification?.action?.toString()==='mention'){%>
                                                            <p class="text-sm">mentioned you in a post</p>
                                                            <%}%>
                            </div>
                            <div class="flex items-center space-x-1">
                                <i class="fa-solid fa-heart text-sm"></i>
                                <p class="text-[13px] text-zinc-500">
                                    <%= notification?.createdAt?.toLocaleString() %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="p-4"> <!--post-->
                        <div class=" w-15 h-15 rounded-xl overflow-hidden">
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>



    </div>

</div>